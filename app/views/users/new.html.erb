<h1>New User</h1>

  <%= form_for @user, url: {action: "create"}, html: {class: "user"} do |f| %>
    <%= label_tag 'Username:' %>
    <%= f.text_field :username %>
    <br /> <br />

    <%= label_tag 'Email:' %>
    <%= f.text_field :email %>
    <br /> <br />

    <%= label_tag 'Password:' %>
    <%= f.password_field :password %>
    <br /> <br />

    <%= f.submit "Submit", name: nil %>
  <% end %>